@page "/events"
@using VladislavAntonyuk.Components.Navigation
@inherits VladislavAntonyukBaseComponent

<Head Title="Vladislav Antonyuk - Events" Description="Vladislav Antonyuk - Events" />

<EventsNavigationComponent>
	<ChildContent Context="events">
		<MudGrid>
			@foreach (var @event in events)
			{
				var url = urlCreator.Encode("events", @event.Name);
				<MudItem sm="6">
					<MudCard Style="height: 100%">
						@if (!string.IsNullOrWhiteSpace(@event.Image))
						{
							<MudLink Href="@url">
								<MudCardMedia Image="@(@event.Image)"
											  Style="background-size: contain" />
							</MudLink>
						}
						<MudCardContent>
							<MudText Typo="Typo.h4" Align="Align.Center">@(@event.Name)</MudText>
							@if (!string.IsNullOrEmpty(@event.Location))
							{
								<MudText Typo="Typo.body1" Align="Align.Center">@(@event.Location)</MudText>
							}
							
							@if (@event.Date is not null)
							{
								<MudText Typo="Typo.body1" Align="Align.Center">@(@event.Date)</MudText>
							}
						</MudCardContent>
						<MudCardActions>
							<MudLink Href="@url">Go To Details</MudLink>
						</MudCardActions>
					</MudCard>
				</MudItem>
			}
		</MudGrid>
	</ChildContent>
</EventsNavigationComponent>