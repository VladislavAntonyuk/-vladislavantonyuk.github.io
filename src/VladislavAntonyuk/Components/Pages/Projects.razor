@page "/projects"
@using VladislavAntonyuk.Components.Navigation
@inherits VladislavAntonyukBaseComponent

<Head Title="Vladislav Antonyuk - Projects" Description="Vladislav Antonyuk - Projects"/>

<ProjectsNavigationComponent>
    <ChildContent Context="projects">
        <MudGrid>
            @foreach (var project in projects)
            {
                <MudItem sm="6">
                    <MudCard Style="height: 100%">
                        @if (!string.IsNullOrWhiteSpace(project.Image))
                        {
                            <MudLink Href="@project.Link" Target="_blank">
                                <MudCardMedia Image="@project.Image"
                                              Style="background-size: contain" />
                            </MudLink>
                        }
                        <MudCardContent>
                            <MudText Typo="Typo.h4">@project.Name</MudText>
                            <MudText>@project.Description</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudLink Href="@project.Link" Target="_blank">Go To Details</MudLink>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </ChildContent>
</ProjectsNavigationComponent>