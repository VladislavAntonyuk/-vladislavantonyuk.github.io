@inherits VladislavAntonyukBaseComponent

@if (newVersionAvailable)
{
	<MudDialog DisableSidePadding="true" @ref="dialog">
		<DialogContent>
			<MudStack Justify="Justify.Center">
				<MudIcon Icon="@Icons.Filled.SystemUpdate" Size="Size.Large" Style="margin: auto; font-size: 5rem;"></MudIcon>
				<MudText>A new version of the application is available</MudText>
				<MudButton ButtonType="ButtonType.Button" OnClick="Reload">
					Click here to reload
				</MudButton>
			</MudStack>
		</DialogContent>
	</MudDialog>
}