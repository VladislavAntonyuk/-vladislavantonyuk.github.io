@using VladislavAntonyuk.Shared.Layouts
<CascadingValue Value="ApplicationInfo">
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
                @* <Error ErrorCode="404"
                ErrorTitle="Oops! This Page Could Not Be Found"
                ErrorText="Sorry but the page you are looking for does not exist, have been removed. name changed or is temporarily unavailable"/>*@
            </LayoutView>
        </NotFound>
    </Router>
</CascadingValue>

@code
{
    [Parameter]
    public AppInfo? ApplicationInfo { get; set; }

    public class UserInfo
    {
        public string? RemoteIpAddress { get; set; }
    }

    public class ConsentInfo
    {
        public bool ShowBanner { get; set; }
        public string? CookieString { get; set; }
    }

    public class AppInfo
    {
        public UserInfo UserInfo { get; set; } = new();
        public ConsentInfo ConsentInfo { get; set; } = new();
    }
}